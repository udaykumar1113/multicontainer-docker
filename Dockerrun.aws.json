{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinations" : [
        {
            "name" : "client",
            "image" : "udaygandagari/multicontainer-client",
            "hostname" : "client",
            "essential" : "false",
            "memory": 128

        },
        {
            "name" : "server",
            "image" : "udaygandagari/multicontainer-server",
            "hostname" : "api",
            "esssential" : "false",
            "memory": 128
        },
        {
            "name" : "worker",
            "image" : "udaygandagari/multicontainer-worker",
            "hostname" : "worker",
            "essential" : "false",
            "memory": 128
        },
        {
            "name" : "nginx",
            "image" : "udaygandagari/multicontainer-nginx",
            "hostname" : "nginx",
            "essential" : "true",
            "portmappings" : [
                {
                    "hostport" : 80,
                    "containerport" : 80
                }
            ],
            "links" : ["client", "server"],
            "memory": 128
        }
    ]
}